<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LogInActivity"
    android:background="@drawable/background_image"
    android:backgroundTint="#B0FFFFFF"
    android:backgroundTintMode="src_over">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome To Scotlandyard"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/button_create_new_game"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Create New Game"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/cambridge_blue"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_join_game"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Join Game"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/cambridge_blue"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>